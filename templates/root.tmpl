<!DOCTYPE html>
<html>
  <head>
    {{- range .Headers -}}
      {{- if eq .Type "title" -}}
        {{"\n      "}}<title>{{ .Value }}</title>
      {{- end -}}
      {{- if eq .Type "css" -}}
        {{"\n      "}}<link rel="stylesheet" href="{{ .Value }}">
      {{- end -}}
      {{- if eq .Type "js" -}}
        {{"\n      "}}<script src="{{ .Value }}"></script>
      {{- end -}}
    {{- end}}
    <script>
      let page_info = {
        lang: "{{ .Lang }}"
      }
    </script>
  </head>
  <body>
    <div class="main-container">
      {{.Content}}
    </div>
  </body>
</html>